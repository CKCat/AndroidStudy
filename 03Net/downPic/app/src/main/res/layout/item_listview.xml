<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.cat.downpic.loopj.android.image.SmartImageView
        android:id="@+id/iv_smart"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是大标题AAAAaaaaaaaaaaaaaaa"
        android:layout_toRightOf="@+id/iv_smart"
        android:textSize="22sp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是正文AAAAaaaaaaaaahfghkjjjjjjjjjjjjjjjaaaaaa"
        android:layout_toRightOf="@+id/iv_smart"
        android:layout_below="@+id/tv_title"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:lines="2"/>
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="222条评论"
        android:layout_below="@+id/tv_detail"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
